# Analytics Configuration
EXPO_PUBLIC_AMPLITUDE_API_KEY=your-amplitude-key-here

# Sentry Configuration
EXPO_PUBLIC_SENTRY_DSN=https://your-sentry-dsn-here

# SendGrid Configuration (Email)
EXPO_PUBLIC_SENDGRID_API_KEY=your-sendgrid-api-key-here
SENDGRID_TEMPLATE_WELCOME=d-03b02b1c7a7e4579b6371aafda4fe10a
